{
  "rules": {
    "no-shadow": "off",
    "new-cap": "off",
    "no-return-await": "off",
    "class-methods-use-this": "off"
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "browser": false
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["@root", "./src"],
          ["@models", "./src/models"],
          ["@requests", "./src/requests"],
          ["@middlewares", "./src/middlewares"],
          ["@resources", "./src/resources"],
          ["@configs", "./src/configs"],
          ["@controllers", "./src/controllers"],
          ["@services", "./src/services"],
          ["@utils", "./src/utils"],
          ["@routes", "./src/routes"],
          ["@db", "./src/db"]
        ],
        "extensions": [".ts", ".js", ".json"]
      }
    }
  }
}
